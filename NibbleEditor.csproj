<Project Sdk="Microsoft.NET.Sdk"> 
  
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
	  <BaseOutputPath>..\Build</BaseOutputPath>
	  <!--RuntimeIdentifier>linux-x64</RuntimeIdentifier-->
	  <SelfContained>false</SelfContained>
	  <PublishSingleFile>false</PublishSingleFile>
	  <!--IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract-->
	  <!--PublishReadyToRun>true</PublishReadyToRun-->
	<ApplicationIcon />
    <StartupObject />
    
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(SolutionDir)Resources\ianm32logo_border.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
		<ShaderFiles Include="$(SolutionDir)Shaders\**\*.glsl" />
	</ItemGroup>

	<!-- Copy Shaders to the Build Directory-->
	<Target Name="CopyCustomContentBuild" AfterTargets="AfterBuild">
		<Copy SourceFiles="@(ShaderFiles)" DestinationFolder="$(TargetDir)Shaders" />
		<Message Text="Shader files copied successfully." Importance="high" />
	</Target>

	<!-- Copy Shaders to the Publish Directory-->
	<Target Name="CopyCustomContentPublish" AfterTargets="Publish">
		<Copy SourceFiles="@(ShaderFiles)" DestinationFolder="$(PublishDir)Shaders" />
		<Message Text="Shader files copied successfully to publish dir." Importance="high" />
	</Target>
	
	
  <!-->Copy Plugins-->
	<Target Name="CopyPluginsBuild" AfterTargets="AfterBuild">
		<!-->Message Importance="high" Text="$(TargetFramework)"-->
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)\NibbleNMSPlugin.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)\NibbleOBJPlugin.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
	    <Copy SourceFiles="$(SolutionDir)lib\libMBIN.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\libPSARC.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\zlib.net.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
	</Target>

	<Target Name="CopyPluginsPublish" AfterTargets="Publish">
		<!-->Message Importance="high" Text="$(TargetFramework)"-->
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)\NibbleNMSPlugin.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)\NibbleOBJPlugin.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\libMBIN.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\libPSARC.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\zlib.net.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
	</Target>

  <ItemGroup>
    <Content Include="..\lib\cimgui\linux-x64\cimgui.so" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' ">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\lib\cimgui\win-x64\cimgui.dll" Condition=" '$(OS)' == 'Windows_NT' ">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nibble\Nibble.csproj">
      <CopyLocal>True</CopyLocal>
      <CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ImGui.NET">
      <HintPath>..\lib\ImGui.NET.dll</HintPath>
      <CopyLocal>True</CopyLocal>
    </Reference>
  </ItemGroup>
  
</Project>
