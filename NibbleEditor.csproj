<Project Sdk="Microsoft.NET.Sdk"> 
  
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
	  <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	  <BaseOutputPath>..\Build</BaseOutputPath>
	  <!--RuntimeIdentifier>linux-x64</RuntimeIdentifier-->
	  <SelfContained>false</SelfContained>
	  <PublishSingleFile>false</PublishSingleFile>
	  <!--IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract-->
	  <!--PublishReadyToRun>true</PublishReadyToRun-->
	<ApplicationIcon />
    <StartupObject />
    <Configurations>OpenGL_Release;OpenGL_DEBUG</Configurations>
    
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='OpenGL_DEBUG|AnyCPU'">
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<PlatformTarget>x64</PlatformTarget>
		<DefineConstants>$(DefineConstants)TRACE;DEBUG;OPENGL</DefineConstants>
	</PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='OpenGL_Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	  <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PlatformTarget>x64</PlatformTarget>
	  <DefineConstants>$(DefineConstants)OPENGL</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(SolutionDir)Resources\ianm32logo_border.png" />
  </ItemGroup>

  <ItemGroup>
		<ShaderFiles Include="$(SolutionDir)Shaders\**\*.glsl" />
	</ItemGroup>

	<!-- Copy Shaders to the Build Directory-->
	<Target Name="CopyCustomContentBuild" AfterTargets="AfterBuild">
		<Copy SourceFiles="@(ShaderFiles)" DestinationFolder="$(TargetDir)Shaders" />
		<Message Text="Shader files copied successfully." Importance="high" />
	</Target>

	<!-- Copy Shaders to the Publish Directory-->
	<Target Name="CopyCustomContentPublish" AfterTargets="Publish">
		<Copy SourceFiles="@(ShaderFiles)" DestinationFolder="$(PublishDir)Shaders" />
		<Message Text="Shader files copied successfully to publish dir." Importance="high" />
	</Target>
	
	
  <!-->Copy Plugins-->
	<Target Name="CopyPluginsBuild" AfterTargets="AfterBuild">
		<!-->Message Importance="high" Text="$(TargetFramework)"-->
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\NibbleNMSPlugin.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\NibbleOBJPlugin.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
	    <Copy SourceFiles="$(SolutionDir)lib\libMBIN.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\libPSARC.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\zlib.net.dll" DestinationFolder="$(TargetDir)Plugins" ContinueOnError="true" />
	</Target>

	<Target Name="CopyPluginsPublish" AfterTargets="Publish">
		<!-->Message Importance="high" Text="$(TargetFramework)"-->
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\NibbleNMSPlugin.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)Build\Plugins\NibbleOBJPlugin.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\libMBIN.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\libPSARC.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
		<Copy SourceFiles="$(SolutionDir)lib\zlib.net.dll" DestinationFolder="$(PublishDir)Plugins" ContinueOnError="true" />
	</Target>

	<ItemGroup>
		<ProjectReference Include="..\NibbleDLL\NibbleDLL.csproj" Condition="$(Configuration)=='OpenGL_DEBUG'">
			<SetConfiguration>Configuration=OpenGL_DEBUG</SetConfiguration>
		</ProjectReference>
	</ItemGroup>

  <ItemGroup>
    <Reference Include="ImGui.NET">
      <HintPath>..\lib\ImGui.NET.dll</HintPath>
    </Reference>
  </ItemGroup>
  
</Project>
